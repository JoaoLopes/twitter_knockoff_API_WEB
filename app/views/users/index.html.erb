<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user %></td>

        <% if has_permission?(user, get_current_user_role, 'users', 'U') %>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
        
        <% if has_permission?(user, get_current_user_role, 'users', 'D') %>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

