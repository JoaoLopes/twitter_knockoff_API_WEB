<p id="notice"><%= notice %></p>

<h1>Listing Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Msg</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.msg %></td>
        <td><%= tweet.user_id %></td>
        <td><%= link_to 'Show', user_tweet_path %></td>
        <td><%= link_to 'Edit', edit_user_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', user_tweet_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_user_tweet_path %>
